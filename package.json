{
  "name": "template-typescript-lib",
  "version": "0.0.0-dripip",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jasonkuhrt/template-typescript-lib.git"
  },
  "author": "Jason Kuhrt",
  "packageManager": "pnpm@8.10.4",
  "license": "MIT",
  "type": "module",
  "files": [
    "src",
    "build"
  ],
  "types": "./build/esm/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./build/cjs/index.d.ts",
        "default": "./build/cjs/index.js"
      },
      "import": {
        "types": "./build/esm/index.d.ts",
        "default": "./build/esm/index.js"
      }
    }
  },
  "scripts": {
    "bootstrap": "tsx scripts/bootstrap.ts",
    "build:toc": "markdown-toc README.md -i --maxdepth 4 && dprint fmt README.md",
    "format": "dprint fmt",
    "lint": "eslint . --fix",
    "dev": "pnpm clean && tsc --build --watch tsconfig.cjs.json tsconfig.esm.json",
    "build": "pnpm clean && pnpm build:cjs && pnpm build:esm",
    "build:cjs": "tsc --project tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > build/cjs/package.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "clean": "tsc --build --clean && rm -rf build",
    "test": "vitest",
    "prepack": "pnpm build",
    "check": "pnpm check:format && pnpm check:lint && pnpm check:types && pnpm check:package",
    "check:format": "dprint check",
    "check:lint": "eslint . --max-warnings 0",
    "check:types": "tsc --noEmit",
    "check:package": "publint run --strict"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^4.2.0",
    "@tsconfig/node22": "^22.0.0",
    "@tsconfig/recommended": "1.0.8",
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "22.13.10",
    "@typescript-eslint/eslint-plugin": "8.27.0",
    "@typescript-eslint/parser": "8.27.0",
    "dripip": "0.10.0",
    "eslint": "9.22.0",
    "eslint-plugin-only-warn": "1.1.0",
    "eslint-plugin-tsdoc": "0.4.0",
    "execa": "9.5.2",
    "fast-glob": "3.3.3",
    "floggy": "0.3.5",
    "fs-jetpack": "5.1.0",
    "inquirer": "12.5.0",
    "markdown-toc": "1.2.0",
    "publint": "^0.3.9",
    "tsx": "4.19.3",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.27.0",
    "vitest": "3.0.9"
  }
}
